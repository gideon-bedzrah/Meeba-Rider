<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailFragment">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view_top_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_layout_requests_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_button_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_chevron_left_24"
                    app:tint="?attr/label_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="Requests"
                    android:textColor="?attr/label_color"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/text_view_view_on_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:text="View Item" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/purple_200">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </fragment>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="20dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:textSize="12sp"
                                        android:id="@+id/text_view_id_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        tools:text="ID: 274349583045"
                                        android:textColor="?attr/label_color"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:textSize="12sp"
                                    android:id="@+id/text_view_item_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    tools:text="Parcels: 0.5 kg"
                                    android:textColor="?attr/label_color"
                                    />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_view_request_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        tools:text="Today, 3:20pm"
                        android:textColor="?attr/label_color"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/text_view_delivery_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="*No Time*"
                        android:textSize="12sp"
                        android:textColor="?attr/label_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_request_time"/>


                    <LinearLayout
                        android:id="@+id/linear1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_delivery_type"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/box_24x24__1x"/>

                        <TextView
                            android:layout_marginStart="10dp"
                            android:textColor="?attr/label_color"
                            android:id="@+id/text_view_pickup_location"
                            android:layout_width="wrap_content"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            tools:text="Madina"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linear1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/map_pin_24x24__1x"/>

                        <TextView
                            android:layout_marginStart="10dp"
                            android:textSize="12sp"
                            android:textColor="?attr/label_color"
                            android:id="@+id/text_view_dropoff_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Cantonments"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_view_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="GHS 29"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/label_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/text_view_total_mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="30 mins"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textColor="?attr/label_color"
                        app:layout_constraintTop_toBottomOf="@id/text_view_total"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <LinearLayout
                        android:id="@+id/linear3"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linear2"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/character_047_1x"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_requester_name"
                                tools:text="Gideon Bedzrah"
                                android:textSize="15sp"
                                android:textColor="?attr/label_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/text_view_requester_number"
                                tools:text="0557587124"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>



                        </LinearLayout>



                    </LinearLayout>

                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/linear3"
                        android:id="@+id/po"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="12sp"
                        android:text="Payment Option:"/>

                    <TextView
                        android:id="@+id/text_view_payment_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/po"
                        app:layout_constraintStart_toEndOf="@id/po"
                        tools:text="Card"
                        android:layout_marginBottom="20dp"
                        android:textSize="15sp"
                        android:textColor="?attr/label_color"/>




                    <Button
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/button_accept_trip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="0dp"
                        android:text="Accept Trip" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>

</LinearLayout>