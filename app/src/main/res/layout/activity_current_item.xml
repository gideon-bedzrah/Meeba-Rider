<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentItemActivity">

    <TextView
        android:id="@+id/text_view_item_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:textColor="?attr/label_color"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Parcels"/>

    <TextView
        android:id="@+id/text_view_view_item"
        app:layout_constraintTop_toBottomOf="@id/text_view_item_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:textColor="?attr/label_color"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Tap to view item"/>

    <TextView
        android:id="@+id/tn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Tracking Number"/>

    <TextView
        android:id="@+id/text_view_tracking_number"
        app:layout_constraintTop_toBottomOf="@id/text_view_item_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        tools:textColor="?attr/label_color"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        tools:text="183367462312"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_request_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Today, 3:20pm"
                tools:textColor="?attr/label_color"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/text_view_delivery_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*No Time*"
                android:textSize="12sp"
                android:textColor="?attr/label_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_request_time"/>

            <TextView
                android:id="@+id/text_view_get_pick_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to get directions"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/linear1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/check_mark_pick_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_delivery_type">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/box_24x24__1x" />

                <TextView
                    android:id="@+id/text_view_pickup_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    tools:text="Madina"
                    android:textColor="?attr/label_color"
                    android:textSize="12sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/linear2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/image_button_dropoff_contact"
                    android:background="@android:color/transparent"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_call_24"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="Dropoff contact"/>

                    <TextView
                        android:id="@+id/text_view_dropoff_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="?attr/label_color"
                        tools:text="Gideon Bedzrah"/>

                    <TextView
                        android:id="@+id/text_view_dropoff_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        tools:text="0208199920"/>


                </LinearLayout>

            </LinearLayout>


            <CheckBox
                android:visibility="invisible"
                android:id="@+id/check_mark_pick_up"
                android:layout_marginTop="-12dp"
                app:layout_constraintTop_toTopOf="@id/linear1"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Pickup"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_view_get_drop_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to get directions"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/linear2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/check_mark_drop_off"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map_pin_24x24__1x" />

                <TextView
                    android:id="@+id/text_view_dropoff_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Cantonments"
                    android:textColor="?attr/label_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/linear1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/image_button_pickup_contact"
                    android:background="@android:color/transparent"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_call_24"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="Pick up contact"/>

                    <TextView
                        android:id="@+id/text_view_pickup_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="?attr/label_color"
                        tools:text="Gideon Bedzrah"/>

                    <TextView
                        android:id="@+id/text_view_pickup_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        tools:text="0208199920"/>


                </LinearLayout>

            </LinearLayout>

            <CheckBox
                android:visibility="invisible"
                android:id="@+id/check_mark_drop_off"
                android:layout_marginTop="-12dp"
                app:layout_constraintTop_toTopOf="@id/linear2"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Dropoff"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_view_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="GHS 29"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/label_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_view_total_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="30 mins"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textColor="?attr/label_color"
                app:layout_constraintTop_toBottomOf="@id/text_view_total_amount"
                app:layout_constraintEnd_toEndOf="parent"/>


            <LinearLayout
                android:id="@+id/linear3"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear2"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/character_047_1x"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_requester_name"
                        tools:text="Gideon Bedzrah"
                        android:textSize="17sp"
                        android:textColor="?attr/label_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/text_view_requester_number"
                        tools:text="0557587124"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

<TextView
    app:layout_constraintTop_toBottomOf="@id/linear3"
    android:id="@+id/po"
    android:layout_marginTop="10dp"
    android:layout_marginStart="60dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:textSize="12sp"
    android:text="Payment Option:"/>

            <TextView
                android:id="@+id/text_view_payment_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/po"
                app:layout_constraintStart_toEndOf="@id/po"
                tools:text="Card"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:textColor="?attr/label_color"/>



            <Button
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/button_complete_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/po"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="0dp"
                android:text="Complete Trip"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>